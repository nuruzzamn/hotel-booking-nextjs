generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id             String  @id @default(uuid())
  image          String
  name           String
  category       String   
  address        String
  costPerNight   Float
  availableRooms Int
  description    String
  rating         Float   @default(0.0)
  active         Boolean @default(true)
  createdAt      DateTime @default(now())
}
